<mvc:View
	controllerName="ui5.hft.portalappsample.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		title="{i18n>appTitle}">
		<customHeader>
			<Bar>
				<contentLeft>
					<Button
						icon="sap-icon://home"
						press=".onHomePress" />
				</contentLeft>
				<contentMiddle>
					<Title
						level="H2"
						tooltip="{i18n>appTitle}"
						text="{i18n>appTitle} - Dummy"/>
				</contentMiddle>
				<contentRight>
				</contentRight>
			</Bar>
		</customHeader>
		<content>
			<MessagePage
			text="{i18n>appTitle}"
			icon="sap-icon://accept"
			description="{i18n>appDescription} {xmodel>/Status}">
			<buttons>
				<Button
					text="{i18n>btnText}"
					press="sayHello" />
			</buttons>
			</MessagePage>
		</content>
	</Page>

</mvc:View>