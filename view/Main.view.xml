<mvc:View
	controllerName="ui5.hft.portal.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc">

	<Page
		title="{i18n>appTitle}"
		id="portal">
		<customHeader>
			<Bar>
				<contentLeft>
				</contentLeft>
				<contentMiddle>
					<Title
						level="H2"
						tooltip="{i18n>appDescription}"
						text="{i18n>appTitle} - Portal"/>
				</contentMiddle>
				<contentRight>
					<Button
						icon="sap-icon://settings"
						visible="{configs>/Portal/Settings}"
						press=".onOpenSettingDialog"
						tooltip="{i18n>settingButtonTooltip}"/>
					<Button
						icon="sap-icon://customer"
						visible= "{configs>/Portal/LoginPossible}"
						press="onOpenLoginDialog"
						tooltip="{i18n>avatarButtonTooltip}"/>
					<Title
						level="H2"
						visible="{configs>/Portal/LoginPossible}"
						text="{xmodel>/User/Name}"/>
					<Button
						icon="sap-icon://log"
						visible="{xmodel>/Status/Loggedin}"
						press="logout"/>
				</contentRight>
			</Bar>
		</customHeader>
		<content>
			<f:GridContainer
				id="grid2"
				class="sapUiSmallMargin"
				visible="false"
				snapToRow="true">
			</f:GridContainer>	
		</content>
	</Page>

</mvc:View>