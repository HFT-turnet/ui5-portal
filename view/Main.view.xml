<mvc:View
	controllerName="ui5.hft.portal.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc">

	<Page
		title="{i18n>appTitle}"
		id="portal">
		<customHeader>
			<Bar>
				<contentLeft>
				</contentLeft>
				<contentMiddle>
					<Title
						level="H2"
						tooltip="{i18n>appDescription}"
						text="{i18n>appTitle} - Portal"/>
				</contentMiddle>
				<contentRight>
					<Button
						icon="sap-icon://settings"
						press=".onSettingPress"
						tooltip="{i18n>settingButtonTooltip}"/>
					<Button
						icon="sap-icon://customer"
						press=".onUserPress"
						tooltip="{i18n>avatarButtonTooltip}"/>
					<Title
						level="H2"
						text="Username"/>
				</contentRight>
			</Bar>
		</customHeader>
		<content>
			<Bar>
				<contentLeft>
					<Label text="Separator 1"/>
				</contentLeft>
			</Bar>
			<f:GridContainer
				id="grid1"
				class="sapUiSmallMargin"
				snapToRow="true">
				<f:layout>
					<f:GridContainerSettings rowSize="84px" columnSize="84px" gap="8px" />
				</f:layout>
				<f:layoutXS>
					<f:GridContainerSettings rowSize="70px" columnSize="70px" gap="8px" />
				</f:layoutXS>		
			</f:GridContainer>
			<Bar>
				<contentLeft>
					<Label text="Separator 2"/>
				</contentLeft>
			</Bar>
			<f:GridContainer
				id="grid2"
				class="sapUiSmallMargin"
				snapToRow="true">
				<f:layout>
					<f:GridContainerSettings rowSize="84px" columnSize="84px" gap="8px" />
				</f:layout>
				<f:layoutXS>
					<f:GridContainerSettings rowSize="70px" columnSize="70px" gap="8px" />
				</f:layoutXS>

	   			<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Test" subheader="Minitest" press="notimplemented" url="#">
					<layoutData>
						<f:GridContainerItemLayoutData minRows="2" columns="2" />
					</layoutData>
					<TileContent footer="Footer" >
						<ImageContent src="sap-icon://time-overtime" />
	   				</TileContent>
	   			</GenericTile>			
			</f:GridContainer>
		</content>
	</Page>

</mvc:View>